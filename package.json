{
  "name": "aquadistrib-pro",
  "private": true,
  "version": "0.1.0",
  "main": "dist-electron/electron/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently -k -r \"tsc -p electron/tsconfig.json --watch\" \"vite\" \"wait-on tcp:5173 && cross-env ELECTRON_RUN_AS_NODE=0 VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "vite build && tsc -p electron/tsconfig.json && electron-builder",
    "preview": "vite preview",
    "lint": "eslint ."
  },
  "dependencies": {
    "better-sqlite3": "^9.6.0",
    "electron-updater": "^6.3.9",
    "lucide-react": "^0.456.0",
    "@hookform/resolvers": "^3.9.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "4.3.3",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.11.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.aquadistrib.pro",
    "files": [
      "dist/**",
      "dist-electron/**",
      "node_modules/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": "electron/assets/",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.business"
    }
  },
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rafium-MS/special-octo-happiness.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Rafium-MS/special-octo-happiness/issues"
  },
  "homepage": "https://github.com/Rafium-MS/special-octo-happiness#readme"
}
